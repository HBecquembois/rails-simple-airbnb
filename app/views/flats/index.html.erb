<h1 class="text-center">All the flats</h1>
<h4 class="text-center">There are <%= Flat.count %> flats available</h4>

<div class="container">
  <div class="flats-cards-container">
    <% @flats.each do |flat| %>
      <div class="flat-card">
        <div>
          <h3><%= flat.name %></h3>
          <h5><%= flat.address %></h5>
          <h5><%= flat.price_per_night %> â‚¬/night</h5>
          <h5><%= flat.number_of_guests %> guests</h5>
        </div>
        <div class="flat-card-links">
          <%= link_to "More info", flat%>
          <%= link_to "Edit", edit_flat_path(flat.id), class: "text-warning" %>
          <%= link_to "Remove", flat_path(flat.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
